doctype 5
html(lang="en-US")
    block vars
        - var router = 'default'

    head
        meta(charset="UTF-8")
        title WebRTC Fun

        meta(content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0", name="viewport")

        block head

    body(data-appular-router="#{router}")

        block content

        block scripts
            - if (environment === 'development')
                script(src="/js/libraries/require/require.js", data-main="/js/libraries/require/configs/dev")
            - else
                script(src="/js/build/libraries/require/require.js")